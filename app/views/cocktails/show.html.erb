<h1>Cocktails#show</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1><%= @cocktail.name %></h1>
      <% @cocktail.doses.each do |dose| %>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to "Delete", dose_path(dose), method: :delete, class: "btn btn-primary"%>
      <% end %>
      <%= link_to "New Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%>
      <%= link_to "Back to Cocktails", cocktails_path, class: "btn btn-primary"%>
    </div>
  </div>
</div>
